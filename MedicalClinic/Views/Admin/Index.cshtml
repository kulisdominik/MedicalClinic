@model IEnumerable<MedicalClinic.Models.User>
@{
    ViewData["Title"] = "Index";
}

<h2>Lista użytkowników</h2>
<table>
    <tr>
        <th>UserId</th>
        <th>LastName</th>
        <th>Email</th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">
                Brak użytkowników
            </td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
        <tr>
            <td>@user.UserId</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
        </tr>
        }
    }
</table>

<a asp-action="Create">Create User</a>

