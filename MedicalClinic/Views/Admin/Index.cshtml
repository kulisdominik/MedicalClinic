@model IEnumerable<MedicalClinic.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h2>Lista użytkowników</h2>
<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
    </tr>

    @if(Model.Count() == 0)
    {
        <tr>
            <td colspan="3">
                Brak użytkowników
            </td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
        </tr>
        }
    }
</table>

<a asp-action="Create">Create User</a>

