@model MedicalClinic.Models.PatientViewModels.PatientCardViewModel
@{
    ViewData["Title"] = "Karta pacjenta";
}

<h2>Karta pacjenta</h2>
<hr />

<div class="row">
    <div class="col-md">
            @if(Model.FirstName == null)
            {
                <a asp-area="" asp-controller="Clerk" asp-action="NewPatientCard" asp-route-id="@Model.PatientId">Nowa karta</a>
            }
            else
            {
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PIN"></label>
                        <input asp-for="PIN" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNum"></label>
                        <input asp-for="PhoneNum" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Sex"></label>
                        <select asp-for="Sex" class="form-control">
                            <option>Kobieta</option>
                            <option>Mężczyzna</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Country"></label>
                        <input asp-for="Country" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="City"></label>
                        <input asp-for="City" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PostalCode"></label>
                        <input asp-for="PostalCode" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Street"></label>
                        <input asp-for="Street" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="BuildingNum"></label>
                        <input asp-for="BuildingNum" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FlatNum"></label>
                        <input asp-for="FlatNum" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-default">Zapisz</button>
                </form>
            }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}