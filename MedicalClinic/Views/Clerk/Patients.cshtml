@model IEnumerable<MedicalClinic.Models.ClerkViewModels.PatientInfoViewModel>

@{
    ViewData["Title"] = "Pacjenci";
}

<h2>Panel recepcjonisty</h2>

<h3><b>Pacjenci</b></h3>
<ul>
    @foreach (var item in Model)
    {
        <li><a asp-action="PatientCardInfo" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</a></li>
    }
</ul>
