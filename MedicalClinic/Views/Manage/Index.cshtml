@model IndexViewModel
@{
    ViewData["Title"] = "Edycja profilu";
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label>Dane użytkownika:</label>
                <input asp-for="FirstName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.FirstName)" />
            </div>
            <div class="form-group">
                <input asp-for="LastName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.LastName)" />
            </div>
            <div class="form-group">
                <label asp-for="PIN"></label>
                <input asp-for="PIN" class="form-control" placeholder="@Html.DisplayNameFor(model => model.PIN)" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="@Html.DisplayNameFor(model => model.PhoneNumber)" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
        {
            <div class="input-group">
                <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(Model=>Model.Email)" />
                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
            </div>
}
else
{
        <input asp-for="Email" class="form-control" />
        <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email - nie dziala jeszcze :)</button>
}
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Płeć</label><br/>
                <select asp-for="Sex" class="form-control">
                    <option>Kobieta</option>
                    <option>Mężczyzna</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Country)" />
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" placeholder="@Html.DisplayNameFor(model => model.City)" />
            </div>
            <div class="form-group">
                <label asp-for="Street"></label>
                <input asp-for="Street" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Street)" />
            </div>
            <div class="form-group">
                <label asp-for="BuildingNum"></label>
                <input asp-for="BuildingNum" class="form-control" placeholder="@Html.DisplayNameFor(model => model.BuildingNum)" />
            </div>
            <div class="form-group">
                <label asp-for="FlatNum"></label>
                <input asp-for="FlatNum" class="form-control" placeholder="@Html.DisplayNameFor(model => model.FlatNum)" />
            </div>
            <div class="form-group">
                <label asp-for="PostalCode"></label>
                <input asp-for="PostalCode" class="form-control" placeholder="@Html.DisplayNameFor(model => model.PostalCode)" />
            </div>
            <button type="submit" class="send_button">Zapisz</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}