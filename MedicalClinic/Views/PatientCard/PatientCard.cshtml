@model MedicalClinic.Models.PatientViewModels.PatientCardViewModel
@{
    ViewData["Title"] = "Karta pacjenta";
}

<h2>Karta pacjenta</h2>
<hr />

<div class="row">
    <div class="col-md">
        @if (Model == null)
    {
        <span>Brak karty pacjenta!</span>
}
else
{
    <form>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="PIN"></label>
            <input asp-for="PIN" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNum"></label>
            <input asp-for="PhoneNum" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Sex"></label>
            <input asp-for="Sex" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Country"></label>
            <input asp-for="Country" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="PostalCode"></label>
            <input asp-for="PostalCode" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Street"></label>
            <input asp-for="Street" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="BuildingNum"></label>
            <input asp-for="BuildingNum" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="FlatNum"></label>
            <input asp-for="FlatNum" class="form-control" disabled />
        </div>
    </form>
    <a asp-area="" asp-controller="PatientCard" asp-action="VisitHistory" asp-route-id="@Model.Id" class="text_format">Zobacz swoją historię wizyt</a>
}
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}