<!doctype html>
<html lang="pl_PL">
<head runat="server">
    <title>Przychodnia</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    @RenderSection("Styles", false)

    <style>
        body {
            background-color: white;
            color: black;
            text-align: center;
        }

        span {
            font-size: 1.5em;
            display: inline-block;
        }

        a {
            font-size: 1em;
            color: #0f5e6a;
        }

            a:hover {
                color: #6d6d6d;
                text-decoration: none;
            }

        .menu-lista a {
            color: white;
            font-size: 1.2em;
        }

            .menu-lista a:hover {
                color: white;
                text-decoration: none;
            }

        .menu-lista > li:hover {
            box-shadow: 0 0 15px 1px #0f3d44 inset;
        }

        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        label > span {
            padding: 10px;
            font-weight: 500;
        }

        input {
            margin: auto;
            width: auto;
            padding: 0 5px;
            height: 50px;
            font-size: 1.2em;
            border: 1px solid #CCC;
        }


        .header {
            height: 18%;
            font-size: 1.5em;
            text-align: left;
            padding: 25px;
        }

            .header a {
                font-size: 0.7em;
                color: #0f5e6a;
            }

            .header span {
                color: #0f5e6a;
                font-weight: 700;
                text-shadow: 1px 0px 1px black;
            }

            .header li {
                margin: 20px;
            }

        .content {
            border-bottom: 1px solid #DDD;
        }

            .content > div {
                padding-top: 30px;
                padding-bottom: 30px;
                text-align: left;
            }

        .menu {
            background-color: #0f5e6a;
            color: white;
        }

        .footer {
            background-color: #0f5e6a;
            color: white;
            padding: 15px;
        }

        .btn {
            width: 120px;
            margin: auto;
        }

            .btn:focus {
                box-shadow: none;
            }

        .form-header {
            font-size: 1.5em;
            text-align: center;
            padding: 25px;
            color: #0f5e6a;
            font-weight: 700;
            border-bottom: 1px solid #DDD;
        }

        .form-content > div {
            padding-top: 20px;
            padding-bottom: 20px;
            text-align: center;
        }

        input[type="submit"] {
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="header row justify-content-center">
            <div class="col-md-9 align-self-center">
                <span>PRZYCHODNIA LEKARSKA</span>
            </div>
            <div class="col-md-2 align-self-center">
                <ul class="list-inline">
                    <li class="list-inline-item"> @Html.ActionLink("Zaloguj", "SignIn", "Home")</li>
                    <li class="list-inline-item"> @Html.ActionLink("Rejestracja", "Index", "Home")</li>
                </ul>
            </div>
        </div>
        <div class="row menu justify-content-center">
            <div class="col-md-12">
                <ul class="list-inline menu-lista">
                    <li class="list-inline-item btn" role="button">@Html.ActionLink("O nas", "Index", "Home")</li>
                    <li class="list-inline-item"><a href="#service" class="btn" role="button">Usługi</a></li>
                    <li class="list-inline-item"><a href="#contact" class="btn" role="button">Kontakt</a></li>
                    <li class="list-inline-item"><a href="#" class="btn" role="button">Tytuł</a></li>
                    <li class="list-inline-item"><a href="#" class="btn" role="button">Tytuł</a></li>
                </ul>
            </div>
        </div>
        <div id="content">
            @RenderBody()
        </div>
        <div class="row justify-content-center footer">
            <div class="col-md-12 align-self-center">
                Stopka<br />.<br />.<br />.
            </div>
        </div>
    </div>
</body>
</html>